/*
  =require twitter-bootstrap-static/bootstrap

  Use Font Awesome icons (default)
  To use Glyphicons sprites instead of Font Awesome, replace with "require twitter-bootstrap-static/sprites"
  =require twitter-bootstrap-static/fontawesome
  */

@import "twitter/bootstrap/bootstrap";
body { 
  padding-top: 60px; 
  background-image: url('pw_maze_white.png');
  background-repeat:repeat;
  font-family: 'Noto Sans', sans-serif;
}
@import "twitter/bootstrap/responsive";

// Set the correct sprite paths
@iconSpritePath: asset-path("twitter/bootstrap/glyphicons-halflings");
@iconWhiteSpritePath: asset-path("twitter/bootstrap/glyphicons-halflings-white");

// Set the Font Awesome (Font Awesome is default. You can disable by commenting below lines)
// Note: If you use asset_path() here, your compiled bootstrap_and_overrides.css will not
//       have the proper paths. So for now we use the absolute path.
@fontAwesomeEotPath: asset-path("fontawesome-webfont.eot?v=3.0.2");
@fontAwesomeEotPath_iefix: asset-path("fontawesome-webfont.eot?#iefix&v=3.0.2");
@fontAwesomeWoffPath: asset-path("fontawesome-webfont.woff?v=3.0.2");
@fontAwesomeTtfPath: asset-path("fontawesome-webfont.ttf?v=3.0.2");
@import "fontawesome";

// Font Awesome
@import "fontawesome";

// Glyphicons
@import "twitter/bootstrap/sprites.less";
@import "vars.css.less.erb";

//customs

.btn-facebook {
  background-color: hsl(225, 48%, 39%) !important;
  background-repeat: repeat-x;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#334b93", endColorstr="#334b93");
  background-image: -khtml-gradient(linear, left top, left bottom, from(#334b93), to(#334b93));
  background-image: -moz-linear-gradient(top, #334b93, #334b93);
  background-image: -ms-linear-gradient(top, #334b93, #334b93);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #334b93), color-stop(100%, #334b93));
  background-image: -webkit-linear-gradient(top, #334b93, #334b93);
  background-image: -o-linear-gradient(top, #334b93, #334b93);
  background-image: linear-gradient(#334b93, #334b93);
  border-color: #334b93 #334b93 hsl(225, 48%, 39%);
  color: #fff !important;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.00);
  -webkit-font-smoothing: antialiased;
}

//bootstrap overrides

::-moz-selection{
  background: @dark-green;
  color: @white;
} 

::selection {
  background: @dark-green;
  color: @white;
}

.input-prepend {
  margin-bottom: 0px;
}

form {
  margin: 0px;
}

a {
  color: @maroon;
}

.text_field{
  width: 100%;
  border-radius: 0px;
}

textarea{
  resize: vertical;
  height: 100px;
}

input[type="text"]{
  border-radius: 0px;
}

//navbar

.navbar .brand {
  padding: 0px 0px 0px 175px;
  opacity: 0.5;
  -o-transition: @transition_time; 
  -ms-transition: @transition_time; 
  -moz-transition: @transition_time; 
  -webkit-transition: @transition_time; 
  transition: @transition_time; 
}

.navbar .brand:hover{
  opacity: 1;
}

.navbar-fixed-top .navbar-inner{
  padding: 5px 0px 5px 0px;
}

.navbar .btn{
  margin-top: 0px;
}

.navbar .nav li a{
  padding: 4px 15px 0px;
  text-shadow: none;
}

.navbar .nav li a.user-link{
  padding-bottom: 3px; 
}

//scrollbar

html {
  overflow-y: scroll; 
}

//navbar

#search-posts{
  margin-right: 36px;
}

.navbar .brand:hover{
  opacity: 1;
}

.navbar-inner { 
  background-image: url('pw_maze_black.png');
  background-repeat:repeat;
  padding-top: 10px; 
  border: none; 
  min-height: 30px; 
} 
 
.navbar a{ 
  font-weight: bold; 
  
} 
 
.navbar a:hover{ 
  text-decoration: none; 
  color: @grey; 
}


.navbar .nav li.dropdown.open .dropdown-toggle{
  background-color: transparent;
  color: @maroon;
}

.user_thumb_small{
  width: 60%;
}

.post-outer {
  padding: 12px;
  border: solid 1px @light-grey;
  border-radius: 10px; 
  margin-bottom: 24px;
  background-color: rgba(0,0,0,0.2); 
}

.post {
  padding: 24px;
  font-size: 12px;
  border: solid 1px @light-grey;
  border-radius: 5px; 
  background-color: rgba(255,255,255,1);
}

.content {
  padding-bottom: 24px;
}

//footer

footer .footer{
  border-top: solid 1px @light-grey;
  text-align: center;
}

.footer span{
  padding: 0 0px 0 10px;
}

.footer a{
  color: @grey;
}

.small-grey-text{
  color: @grey;
  font-size: @smallest-text-size;
}
