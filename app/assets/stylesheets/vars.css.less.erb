//colors

@white: #fff;
@almost-black: #232323;
@grey: #999;
@dark-grey: #777;
@light-grey: #ddd;

@dark-green: #007f3f;
@dark-red: #b20000;
@maroon: #8B0000;

//text-sizes
@smaller-text-size: 14px;
@smallest-text-size: 13px;

//transigtion
@transition_time: .5s;

.grey_text{
  color: @grey;
}

.smallest-grey-text{
  font-size: @smallest-text-size;
  color: @grey; 
}

.text-align-right{
  text-align: right;
}
